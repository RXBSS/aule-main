<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.phpdoc.org"
>
    <title>AULE Dokumentation</title>
    <paths>
        <output>docs/php</output>
        <cache>docs/php-cache</cache>
    </paths>
    <version number="3.0">
        <api format="php">
            <source dsn=".">
               <path>dist/api/**/*</path>
            </source>
            <extensions>
                <extension>php</extension>
            </extensions>
            <default-package-name>Aule</default-package-name>
            <include-source>true</include-source>
            <markers>
                <marker>TODO</marker>
                <marker>FIXME</marker>
            </markers>
        </api>
    </version>
</phpdocumentor>